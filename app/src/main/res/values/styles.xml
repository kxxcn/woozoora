<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeOverlay.Woozoora.BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/top_all_round_solid_navy</item>
    </style>

    <style name="ThemeOverlay.Woozoora.BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ThemeOverlay.Woozoora.BottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.Woozoora.BottomSheetTheme" parent="ThemeOverlay.Woozoora.BottomSheetDialog" />

    <style name="BottomBarText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/font_recipe</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BaseDialogFragment">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="InviteTabText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/font_nexon_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
